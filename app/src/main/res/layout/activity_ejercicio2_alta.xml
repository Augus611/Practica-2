<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio2_Alta">

    <TextView
        android:id="@+id/label_TituloAlta"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Alta de ciudad"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="366dp"
        android:layout_height="427dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="428dp">

            <TextView
                android:id="@+id/labelPais"
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:text="Pais"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.04" />

            <AutoCompleteTextView
                android:id="@+id/inputPaisAlta"
                android:layout_width="219dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="textCapWords"
                android:completionThreshold="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelPais"
                app:layout_constraintVertical_bias="0.032" />

            <TextView
                android:id="@+id/labelCiudad"
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:text="Ciudad"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputPaisAlta"
                app:layout_constraintVertical_bias="0.037" />

            <EditText
                android:id="@+id/inputCiudadAlta"
                android:layout_width="219dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="textCapWords"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelCiudad"
                app:layout_constraintVertical_bias="0.046" />

            <TextView
                android:id="@+id/labelPoblacion"
                android:layout_width="139dp"
                android:layout_height="29dp"
                android:text="Poblacion"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputCiudadAlta"
                app:layout_constraintVertical_bias="0.082" />

            <EditText
                android:id="@+id/inputPoblacionAlta"
                android:layout_width="219dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.102"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelPoblacion"
                app:layout_constraintVertical_bias="0.081" />

            <Button
                android:id="@+id/buttonAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="crearCiudad"
                android:text="Crear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputPoblacionAlta"
                app:layout_constraintVertical_bias="0.364" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>